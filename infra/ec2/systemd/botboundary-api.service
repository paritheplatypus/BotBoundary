[Unit]
Description=BotBoundary API (FastAPI)
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/opt/botboundary/Backend/api
EnvironmentFile=/opt/botboundary/.env
ExecStart=/opt/botboundary/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
